doctype html
html(lang="ko")
    head
        title #{pageTitle} | Youtube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css/mvp.css")
        link(rel="stylesheet" href="/static/css/styles.css")
    body
        header
            h1=pageTitle
            nav
                ul 
                    li 
                        a(href="/") Home
                    li 
                        a(href="/search") Search
                    
                    if loggedIn
                        li
                            a(href="/users/edit") Edit Pofile
                        li 
                            a(href=`/users/${user._id}`) #{user.name} 의 프로필
                        li 
                            a(href="/logout") Log out
                        li 
                            a(href="/videos/upload") Upload Video
                    else 
                        li 
                            a(href="/login") Login
                        li 
                            a(href="/users/join") Join

        main
            block content
        include partials/footer.pug
    script(src="/static/js/main.js")