extends base
include mixins/comment

block content
    div#videoContainer(data-id=video._id)
    if /iPhone|iPad|iPod/.test(navigator.userAgent)
        video(src=video.fileUrl crossorigin controls)
    else
        video(src=video.fileUrl crossorigin autoplay)
        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play
                div.videoControls__time
                    span#currenTime 00:00
                    span  / 
                    span#totalTime 00:00
            input(type="range" step="1" value="0" min="0")#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range" step="0.1", value=0.5, min="0" max="1")#volume
                span#mute
                    i.fas.fa-volume-up
            div
                span#fullScreen
                    i.fas.fa-expand
    div.video__info
        h4=video.title
        p=video.hashTags
        div.video__owner
            img(src=video.owner.avatar).video__owner__img
            div
                a(href=`/users/${video.owner._id}`)=video.owner.name
                small Upload #{video.owner.videos.length}
    
    if String(video.owner._id) === String(user._id)
        div.sub_button
            a(href=`${video.id}/edit`) Edit Video &rarr;
            br
            a(href=`${video.id}/delete`) Delete Video &rarr;

    if loggedIn
        div.video__comments
            form.video__comments-form#commentForm
                input(cols="30" rows="10" placeholder="Write a comment")
                button 작성
    div.comments__wrap
        ul 
            each comment in video.comments.reverse()
                +comment(comment)
    
  

block scripts
    script(src="/static/js/videoPlayer.js") 
    script(src="/static/js/comment.js") 