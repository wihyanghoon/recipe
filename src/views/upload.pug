
extends base.pug

block content
    div 
        video#preview
        button#actionBtn Start Recording
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") FILE
        input(type="file", accept="video/*", required, id="video", name="video")
        label(for="thumb") IMAGE
        input(type="file", accept="image/*", required, id="thumb", name="thumb")
        label(for="title") TITLE
        input(placeholder="Title", id="title" required, type="text", name="title", maxlength=80)
        label(for="description") DESCRTION
        input(placeholder="Description", id="description" required, type="text", name="description", minlength=5)
        label(for="avatar") HASHTAG
        input(placeholder="Hashtags, separated by comma.", id="hashtags" required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")
block scripts
    script(src="/static/js/recorder.js") 