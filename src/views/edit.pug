extends base.pug

block content
    form(method="POST")
        h2 VIDEO EDIT
        label(for="title") TITLE
        input(name="title" id="title" placeholder="Video Title", value=video.title, required)
        label(for="description") DESCRIPTION
        input(placeholder="Description", id="description" required, type="text" name="description", minlength=20, value=video.description)
        label(for="hastags") DESCRIPTION
        input(placeholder="Hashtags, separated by comma.", id="hastags" required, type="text" name="hashtags", value=video.hashTags.join())
        input(value="Save" type="submit")