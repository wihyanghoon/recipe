extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST" enctype="multipart/form-data")
        input(type="password" placeholder="기존 비밀번호" name="password")
        input(type="password" placeholder="새로운 비밀번호" name="newPassword")
        input(type="password" placeholder="새로운 비밀번호 확인" name="newPasswordCheck")
        input(type="submit" value="change password")