mixin video(video)
    a(href=`/videos/${video.id}`).video-mixin
        div(style=`background:url(/${video.thumbUrl}); background-size:cover; background-position:center center`).video-mixin__thumb
            
        div.video-mixin__data
            span.video-mixin__title=video.title
            div.video-mixin__meta
